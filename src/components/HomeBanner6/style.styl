
/*第六个banner--最新消息*/
.six-banner{
  height: 800px;
  overflow: hidden;
  /*border: 1px solid red;*/
  background-color: #FAFAFA;
  text-align: center;
}
.six-banner>h2{
  /*text-align: center;*/
  font-size: 30px;
  margin-top: 50px;
  color: #4A4A4A;
}
.six-banner>ul{
  overflow: hidden;
  display: inline-block;
  max-width: 1650px;
  background-color: #FAFAFA;
  text-align: left;
}
.six-banner>ul>li{
  float: left;
  border: 1px #D3D3D3 solid;
  width: calc((100% - 60px) / 3);
  height: 600px;
  margin: 10px;
  background-color: #fff;
  box-sizing: border-box;
}

.six-banner>ul>li>img{
  height: 240px;
  width: 100%;
}
.six-banner>ul>li h3{

}
.six-banner>ul>li>div{
  width: 80%;
  margin: auto;
  color: #4A4A4A;

}
.six-banner>ul>li>div>span{
  color: #9B9B9B;
}
.six-banner>ul>li>div>.read-more-btn{
  margin: auto;
  border: 1px solid #54C2F0;
  width: 146px;
  box-sizing: border-box;
  color: #54C2F0;
  padding: 10px 40px;
}
.six-banner>ul>li>div>.read-more-btn:hover{
  color: #fff;
  background-color: #54C2F0 ;
  cursor: pointer;
}
