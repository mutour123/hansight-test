
/*footer*/
footer{
  /*height: 300px;*/
  background-color: #555555 ;
  padding: 50px 100px;
  color: #C0C0C0;
}

footer>div{
  height: 60px;
  line-height: 60px;
}
footer>div>ul{
  vertical-align: top;
  margin-left: 60px;
  display: inline-block;
  height: 60px;
  overflow: hidden;
  color: #fff;
}
footer>div>ul>li>img{
  height: 40px;
  padding-top: 10px;
}
footer>div>ul>li {
  float: left;
  box-sizing:border-box;
  padding: 0 5px;
}
footer>.company-record{
  margin-top: 80px;
  text-align: center;
}

